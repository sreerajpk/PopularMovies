<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="360">

    <shape
        android:innerRadius="25dp"
        android:shape="ring"
        android:thickness="5dp"
        android:useLevel="false">
        <size
            android:width="48dp"
            android:height="48dp"/>

        <gradient
            android:centerColor="#80C62828"
            android:centerY="0.5"
            android:endColor="#ffC62828"
            android:startColor="#00C62828"
            android:type="sweep"
            android:useLevel="false"/>
    </shape>

</rotate>